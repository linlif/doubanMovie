<view class='container'>
  <!-- 用户信息 -->
  <view class='userInfo'>
    <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
    <view class="userAvatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="userNickName">
      <open-data type="userNickName"></open-data>
    </view>

    <!-- 需要使用 button 来授权登录 -->
    <!-- <button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
    <view wx:else>请升级微信版本</view> -->
  </view>

  <!-- 系统信息 -->
  <view class='systemInfo'>
    <view>手机品牌：
      <text>{{systemInfo.brand}}</text>
    </view>
    <view>手机型号：
      <text>{{systemInfo.model}}</text>
    </view>
    <view>设备像素比：
      <text>{{systemInfo.pixelRatio}}</text>
    </view>
    <view>屏幕宽度：
      <text>{{systemInfo.screenWidth}}</text>
    </view>
    <view>屏幕高度:
      <text>{{systemInfo.screenHeight}}</text>
    </view>
    <view>可使用窗口宽度：
      <text>{{systemInfo.windowWidth}}</text>
    </view>
    <view>可使用窗口高度：
      <text>{{systemInfo.windowHeight}}</text>
    </view>
    <view>状态栏高度：
      <text>{{systemInfo.statusBarHeight}}</text>
    </view>
    <view>微信设置的语言：
      <text>{{systemInfo.language}}</text>
    </view>
    <view>微信版本号：
      <text>{{systemInfo.version}}</text>
    </view>
    <view>操作系统版本号：
      <text>{{systemInfo.system}}</text>
    </view>
    <view>客户端平台：
      <text>{{systemInfo.platform}}</text>
    </view>
    <view>用户设置的字体大小：
      <text>{{systemInfo.fontSizeSetting}}</text>
    </view>
    <view>客户端基础库版本：
      <text>{{systemInfo.SDKVersion}}</text>
    </view>
    <view>当前网络类型：
      <text>{{systemInfo.networkType}}</text>
    </view>
    <view>当前屏幕亮度：
      <text>{{systemInfo.brightNess}}</text>
    </view>
  </view>
</view>